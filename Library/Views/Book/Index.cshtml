@model List<Book>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista książek</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Dodaj nową książkę
            </a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Tytuł</th>
        <th>Autor</th>
        <th>ISBN</th>
        <th>Kategoria</th>
        <th>Dostępny</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td>@obj.Title</td>
            <td>@obj.Author</td>
            <td>@obj.ISBN</td>
            <td>@obj.Category</td>
            <td>@obj.Available</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edycja
                    </a>
                        <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                            <i class="bi bi-trash-fill"></i> Usuń
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>

</table>